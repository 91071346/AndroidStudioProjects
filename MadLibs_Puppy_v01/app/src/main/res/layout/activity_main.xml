                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_Verb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

